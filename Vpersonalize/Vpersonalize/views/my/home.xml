<odoo>
    <template id="vpersonalize_my_home_template" inherit_id="portal.portal_my_home">
        
        <xpath expr="//div[@id='portal_client_category']" position="inside">
            <div class="o_portal_index_card col-md-6 order-2">
                <a href="/my/saved_design" title="Your Saved Designs" class="d-flex justify-content-start gap-2 gap-md-3 align-items-center py-3 pe-2 px-md-3 h-100 rounded text-decoration-none text-reset text-bg-light">
                        <div class="o_portal_icon align-self-start">
                            <img  src="/sale/static/src/img/bag.svg" loading="lazy" style="filter: grayscale(1);" />
                        </div>
                        <div>
                            <h5 class="mt-0 mb-1 d-flex gap-2">
                                <span>Saved Designs</span>
                            </h5>
                            <p class="m-0 text-600">
                                Your saved designs are here
                            </p>
                        </div>
                    </a>
                </div>
        </xpath>

    </template>
</odoo>