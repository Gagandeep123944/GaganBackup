
<odoo>
    <template id="vpersonalize_login" inherit_id="web.login">
        
        <xpath expr="//t[@t-name='web.login']" position="replace">

            <t name="Login" t-name="web.login"> 
            <t t-call="web.login_layout">
                <style>
                    .left_part h1 {
                    color: #242424;
                    font-family: Verdana;
                    font-style: normal;
                    font-weight: 700;
                    line-height: 110%;
                    font-size: 50px;
                }
                
                span.red_color {
                    color: #E41B22;
                    font-weight: 700;
                }
            .firstscreen__decor-back {
                position: absolute;
            }
            
            .login_topbar {
                display: flex;
                justify-content: space-between;
                max-width: 1212px;
                margin: auto;
                align-items: center;
            }
                    .login_layout {
                    position: relative;
                }
                
                .firstscreen__decor-back {
                    right: 0;
                }
                    .login_layout::after {
                        content: "";
                        width: 232px;
                        height: 232px;
                        background: url(../../Vpersonalize/static/src/images/sidethree.png);
                        top: -86px;
                        right: 5px;
                        position: absolute;
                        background-size: cover;
                }
                      .login_layout::before {
                        content: "";
                        width: 69px;
                        height: 75px;
                        background: url(../../Vpersonalize/static/src/images/sidetwo.svg);
                            bottom: 52px;
                            right: 37px;
                        position: absolute;
                        background-size: cover;
                }
                    .login_topbar {
                            position: relative;
                        }

                  .login_topbar::after {
                         content: "";
                        width: 96px;
                        height: 122px;
                        background: url(../../Vpersonalize/static/src/images/sideone.svg);
                        bottom: 9%;
                        left: 27%;
                        position: absolute;
                        background-size: cover;
                  }
                    .wrapper {
    background: #F4F6F8;
    padding: 110px 0px;
}

.main_form {
    display: flex;
    border-radius: 30px;
    background: #FFF;
    padding: 80px 75px;
}

.st_container {
    max-width: 1212px;
    margin: auto;
}

.divide_one {
    width: 50%;
   border-right: 1px solid #AEADAD;
}

.divider_two {
    width: 50%;
    padding-right: 0px;
    padding-left: 65px;
}

.mb-3.field-login input, input#password  {
    color: #AEADAD;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
    border-radius: 10px;
    border: 1px solid #AEADAD;
    padding: 16px 20px;
    margin-bottom: 16px;
    min-height: 56px;
}
.mb-3.field-login label{
    color: #242424;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
    margin-bottom: 10px;
    font-family: 'Varela Round';
}

form.oe_login_form {
    max-width: 100%;
    padding-right: 84px;
    margin-top: 0px;
}


button.btn.btn-primary {
    background-color: rgba(228, 27, 34, 1) !important;
    color: #fff !important;
    border-radius: 8px !important;
    background: #E41B22;
    margin-top: 14px !important;
    padding: 9px;
    min-height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #FFF;
    font-size: 14px;
    font-style: normal;
    font-weight: 700;
    line-height: 170%;
    text-transform: uppercase;
    margin-bottom: 22px;
}

label.form-label {
    position: relative;
}

label.form-label::after {
    position: absolute;
    content: "*";
    color: red;
    top: 0px;
    right: -11px;
    font-size: 20px;
}

.lost_man {
    border-radius: 10px;
    border: 1px solid #AEADAD;
    padding: 30px;
    margin-bottom: 20px;
}

h1.simpl_h1 {
    color: #242424;
    font-style: normal;
    font-weight: 700;
    line-height: 140%;
    font-size: 20px;
}
.wrapper {
    margin-top: 45px;
}
a.simple_btn {
    border-radius: 8px;
    background: #E41B22;
    min-height: 42px;
    width: fit-content;
    min-width: 117px;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    color: #FFF;
    font-size: 14px;
    font-style: normal;
    font-weight: 700;
    line-height: 170%;
    text-transform: uppercase;
}

h1.simpl_h1 {
    margin-bottom: 20px;
}

.existing_customer {
    border-radius: 10px;
    border: 1px solid #AEADAD;
    padding: 30px;
}
.top_heading h1 {
    color: #242424;
    font-style: normal;
    font-weight: 700;
    line-height: 120%;
    font-family: 'Varela Round';
    font-size: 40px;
    margin-bottom: 40px;
}

input:focus {
box-shadow: none !important;
border-color: #00000026 !important;
}

input:focus-visible {
outline: none !important;
}
._part img {
max-width: 500px;
}
.firstscreen__decor-back {
bottom: 0;
}

                    @media only screen and (max-width: 992px) {
._part {
    display: none;
}

.login_layout {
    min-height: 400px;
}

.login_topbar {
    padding-top: 98px;
}

.login_topbar::after {
    display: none;
}

.login_layout::after {
    z-index: -1 !important;
    top: -120px;
}

.left_part h1 {
    text-align: center;
}

.main_form {
    padding: 15px;
    display: block;
    border-radius: 0px;
    padding-bottom: 44px;
}

.st_container {
    max-width: 100%;
}

.divide_one {
    width: 100%;
    border-right: none;
    border-bottom: 1px solid #AEADAD;
}

form.oe_login_form {
    padding: 0px;
}

.divider_two {
    width: 100%;
    padding-top: 40px;
    padding-left: 0px;
}

.wrapper {
    padding-bottom: 50px;
    padding-top: 50px;
}
}
    
</style>
                <div class="login_layout">
                    
                        
                    <div class="firstscreen__decor-back">
                <svg width="1320" height="619" viewBox="0 0 1320 619" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M1320 0H0L1320 619V0Z" fill="url(#paint0_linear_3_2168)"></path>
                    <defs>
                        <linearGradient id="paint0_linear_3_2168" x1="2735.67" y1="0" x2="2735.67" y2="619" gradientUnits="userSpaceOnUse">
                            <stop stop-color="white" stop-opacity="0"></stop>
                            <stop offset="0.15" stop-color="white" stop-opacity="0.12"></stop>
                            <stop offset="1" stop-color="#E41B22" stop-opacity="0.13"></stop>
                        </linearGradient>
                    </defs>
                </svg>
            </div>
                          
                    <div class="login_topbar">
                        <div class="left_part">
                            <h1>My <span class="red_color">account</span>â€‹</h1>
                        </div>
                          <div class="_part">
                              <img src="../../Vpersonalize/static/src/images/accaunt-image.svg"/>
                          </div>
                        
                    </div>
                     </div>
                <div class="wrapper">
                    <div class="st_container">
                <div class="main_form">
                    <div class="divide_one">
                <form class="oe_login_form" role="form" t-attf-action="/web/login" method="post" onsubmit="this.action = '/web/login' + location.hash">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
    
                    <div class="mb-3" t-if="databases and len(databases) &gt; 1">
                        <label for="db" class="col-form-label">Database</label>
                        <div t-attf-class="input-group {{'input-group-sm' if form_small else ''}}">
                            <input type="text" name="db" t-att-value="request.db" id="db" t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required" readonly="readonly"/>
                            <a role="button" href="/web/database/selector" class="btn btn-secondary">Select <i class="fa fa-database" role="img" aria-label="Database" title="Database"/></a>
                        </div>
                    </div>
                   <div class="top_heading">
                       <h1>Login</h1>
                   </div>
                    <div class="mb-3 field-login">
                        <label for="login" class="form-label">Email</label>
                        <input type="text" placeholder="Email" name="login" t-att-value="login" id="login" t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required" autofocus="autofocus" autocapitalize="off"/>
                    </div>
    
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" placeholder="Password" name="password" id="password" t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required" autocomplete="current-password" t-att-autofocus="'autofocus' if login else None" maxlength="4096"/>
                    </div>
    
                    <p class="alert alert-danger" t-if="error" role="alert">
                        <t t-esc="error"/>
                    </p>
                    <p class="alert alert-success" t-if="message" role="status">
                        <t t-esc="message"/>
                    </p>
    
                    <div t-attf-class="clearfix oe_login_buttons text-center gap-1 d-grid mb-1 {{'pt-2' if form_small else 'pt-3'}}">
                        <button type="submit" class="btn btn-primary">Log in</button>
                        <t t-if="debug">
                            <button type="submit" name="redirect" value="/web/become" class="btn btn-link btn-sm">Log in as superuser</button>
                        </t>

                      
                        <div class="o_login_auth"/>
                    </div>
    
                    <input type="hidden" name="redirect" t-att-value="redirect"/>
                </form>
                        </div>
                    <div class="divider_two">
                      <div class="lost_man">
                          <h1 class="simpl_h1">Lost your password?</h1>
                      
                             <a class="simple_btn" t-if="reset_password_enabled" t-attf-href="/web/reset_password?{{ keep_query() }}">CLICK HERE</a>
                      </div>
                        <div class="existing_customer">
                             <h1 class="simpl_h1">Don't have an account?</h1>
                            
                             <a class="simple_btn" t-if="signup_enabled" t-attf-href="/web/signup?{{ keep_query() }}">REGISTER</a>
                            
                        </div>
                        
                    </div>
                    </div>
                        </div>
                     </div>
           
            </t>
        </t>

        </xpath>
    </template>
</odoo>    